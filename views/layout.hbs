<!DOCTYPE html>
<html>
  <head>
    <title>{{title}} - Tuentiyo&reg;</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="preload">
    {{#if currentUser}}
    <section class="modals">
      <div class="close-modal">
        <div></div>
        <div></div>
      </div>
      <div class="albums-modal">
        {{#each user.albums}}
          {{name}}
        {{/each}}
      </div>
      <form action="/upload" class="new-album" method="POST">
      <input type="text" class="new-album-input" placeholder="Nuevo Album">
      <button>Crear Album</button>
      </form>
    </section>
    <nav class="nav-bar">
      {{>menuDesk}}
    </nav>
    <header class="mobile-menu">
      <div class="mobile-navbar">
        {{>menuMobileHeader}}
      </div>
      <nav class="menu-mobile-links-box">
        {{>menuMobileLinks}}
      </nav>
    </header>
    {{/if}}
    {{{body}}}
    <script src="/javascripts/main.js"></script>
  </body>
</html>
