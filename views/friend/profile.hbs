<main class="content main-content">
<aside class="main-aside profile-user"> 
  <header class="profile-img">
    <img src="{{url}}" alt="">
  </header>
  <section class="info-mobile">
    <p class="toggler-info">Ver información de <span>{{currentUser.name}}</span></p>
    <div class="info-container">
        <h3>Descripción:</h3>
        <p>{{friend.description}}</p>
        <h3>Trabajo:</h3>
        <p>{{friend.job}}</p>
        <h3>Estudios:</h3>
        <p>{{friend.studies}}</p>
        <h3>Cumpleaños:</h3>
        <p>{{birthday}}</p>
    </div>
  </section>
  <section class="info">
    <h3>Descripción:</h3>
    <p>{{friend.description}}</p>
    <h3>Trabajo:</h3>
    <p>{{friend.job}}</p>
    <h3>Estudios:</h3>
    <p>{{friend.studies}}</p>
    <h3>Cumpleaños:</h3>
    <p>{{birthday}}</p>
  </section>
</aside>
<section>
  <h2>{{friend.name}} {{friend.surnames}}</h2>
  {{>estadoFriend}}
  <h2>Novedades</h2>
</section>
<aside class="main-aside albums-profile">
  <h3>Álbumes <span class="count"><a href="/t/user/{{friend.username}}/albums">({{friend.albums.length}})</a></span></h3>
  <div class="albums-container">
  {{#each last4Albums}}
    <a href="/t/user/{{../friend.username}}/albums/{{this._id}}">
      <img src="{{this.photos.[0].headPhoto}}" alt="{{this.photos.[0].name}}">
    </a>
  {{/each}}
  </div>
  <h3>Amigos <span class="count">({{friend.friends.length}})</span></h3>
  <div class="friends-container">
    {{#each last6Friends}}
    <a href="/t/user/{{username}}">
      <img src="{{headPhoto}}" alt="{{name}}">
    </a>
    {{/each}}
  </div>
</aside>
</main>